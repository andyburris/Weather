<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#FF0000"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/testLayout2Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/testLayout2Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Really long description text that spans multiple lines and will look cool on a popup window" />

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/testChip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip 1" />

            <com.google.android.material.chip.Chip
                android:id="@+id/testChip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip 2" />
        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>
</androidx.cardview.widget.CardView>
